<h1>Detalhes</h1>

<h5><%= @movie['title'] %></h5>
<h5><%= @movie['popularity'] %></h5>
<h5><%= @movie['tagline'] %></h5>
<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Conteudo</th>
      <th>Data</th>
      <th>Idfilme</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.nome %></td>
        <td><%= comment.conteudo %></td>
        <td><%= comment.data %></td>
        <td><%= comment.idFilme %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with(model: @comment, local: true) do |form| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :conteudo %>
    <%= form.text_field :conteudo %>
  </div>

  <div class="field">
    <%= form.label :data %>
    <%= form.date_select :data %>
  </div>
    
  <div class="field">
    <%= form.hidden_field :idFilme, :input_html => {:idFilme => @movie['id']}%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

